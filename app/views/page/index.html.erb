<div class="row">

  <div class="col-md-offset-3 col-md-6">

    <h1 class="text-center">Facebook Page Fetcher</h1>

    <%= simple_form_for(Page.new, html: {class: 'form-horizontal' }, url: { action: "create" }) do |page| %>

        <%= page.input :identity, placeholder: "Enter facebook page id or page username", label: false %>

        <div class="col-md-offset-3 col-md-6">

          <%= page.submit "Add", class: "btn btn-default btn-block" %>

        </div>

    <% end %>

  </div>

</div>

<div class="row top-margin">

  <div class="col-md-offset-3 col-md-6">


    <div class="list-group">

      <% @pages.each do |page| %>

        <li class="list-group-item">

        <%= link_to page_path(page.id) do %>

          <%= image_tag page.picture, class: "img-responsive pull-left" %>

          <p class="list-group-item-text">

           <h3> <%= page.name %></h3>

          </p>

        <% end %>

        </li>

      <% end %>

    </div>

  </div>

</div>
